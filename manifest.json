{
  "manifest_version": 3,
  "name": "WhatsApp Bulk Messenger & Verifier",
  "version": "1.0",
  "description": "Send bulk messages and verify WhatsApp numbers via WhatsApp Web.",
  "permissions": ["scripting", "activeTab", "downloads", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "WhatsApp Bulk Tool"
  },
  "host_permissions": ["https://web.whatsapp.com/*"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["libs/xlsx.full.min.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "libs/xlsx.full.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
