{
  "manifest_version": 3,
  "name": "WhatsApp Bulk Messenger & Verifier",
  "version": "1.0",
  "description": "Send bulk messages and verify WhatsApp numbers via WhatsApp Web.",
  "permissions": [
    "scripting",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
} 